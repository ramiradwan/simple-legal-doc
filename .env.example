# ------------------------------------------------------------------------------  
# Signing backend selection (REQUIRED)  
#  
# local : local PKCS#12 signing (development only)  
# http  : external signer sidecar  
# ------------------------------------------------------------------------------  
SIGNING_BACKEND=local  
  
  
# ------------------------------------------------------------------------------  
# Local signing (SIGNING_BACKEND=local)  
# ------------------------------------------------------------------------------  
SIGNING_P12_PATH=/run/dev-cert/dev-signing.p12  
SIGNING_P12_PASSWORD=dev-only  
  
  
# ------------------------------------------------------------------------------  
# External signer (SIGNING_BACKEND=http)  
# ------------------------------------------------------------------------------  
SIGNING_HTTP_URL=http://signer:8080/sign-archival  
  
  
# ------------------------------------------------------------------------------  
# Azure Trusted Signing (used by signer sidecar only)  
# REQUIRED when SIGNING_BACKEND=http  
# ------------------------------------------------------------------------------  
AZURE_TRUSTED_SIGNING_ACCOUNT=  
AZURE_TRUSTED_SIGNING_PROFILE=  
  
  
# ------------------------------------------------------------------------------  
# Azure Entra ID – Service Principal  
# REQUIRED when running auditor (LLM calls) inside Docker  
# ------------------------------------------------------------------------------  
AZURE_CLIENT_ID=  
AZURE_TENANT_ID=  
AZURE_CLIENT_SECRET=  
  
  
# ------------------------------------------------------------------------------  
# Azure OpenAI (Entra ID authentication)  
# ------------------------------------------------------------------------------  
AZURE_OPENAI_ENDPOINT=  
AZURE_OPENAI_DEPLOYMENT=gpt-5.2-chat  
AZURE_OPENAI_API_VERSION=2025-01-01-preview  
AZURE_OPENAI_TIMEOUT_SECONDS=30  
  
  
# ------------------------------------------------------------------------------  
# Auditor — Semantic Audit (LDVP SANDBOX MODE)  
#  
# IMPORTANT:  
# - Sandbox enables Pass 1 ONLY  
# - Full LDVP (P1–P8) remains disabled  
# - NON-PRODUCTION  
# ------------------------------------------------------------------------------  
AUDITOR_ENABLE_LDVP=false  
AUDITOR_ENABLE_LDVP_SANDBOX=true  
  
AUDITOR_LDVP_MODEL_PROVIDER=azure_openai  
AUDITOR_LDVP_MODEL_NAME=  
AUDITOR_LDVP_MAX_FINDINGS=25  
  
  
# ------------------------------------------------------------------------------  
# Informational / future-facing  
# ------------------------------------------------------------------------------  
LDVP_PROTOCOL_VERSION=2.3  